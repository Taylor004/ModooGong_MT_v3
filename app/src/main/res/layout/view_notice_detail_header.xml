<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_margin_medium"
        android:orientation="horizontal">

        <include layout="@layout/content_notice_icon"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin_small_s"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTitle"
                style="@style/textMedium"
                android:lineSpacingExtra="@dimen/common_line_spacing"
                android:ellipsize="end"
                android:maxLines="2"
                android:includeFontPadding="false"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_micro_s">
                <TextView
                    android:id="@+id/txtDate"
                    style="@style/textSmall"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_gray"
                    android:includeFontPadding="false" />
                <TextView
                    android:id="@+id/txtFileName"
                    style="@style/textSmall"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:textColor="@color/color_gray"
                    android:includeFontPadding="false"
                    android:maxEms="10"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:drawableLeft="@drawable/ic_attach"
                    android:drawablePadding="@dimen/common_margin_micro_s"
                    android:visibility="gone"/>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_size"
        android:layout_gravity="bottom"
        android:background="@color/line_color_black"/>

</FrameLayout>