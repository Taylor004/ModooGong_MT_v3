<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/itemPaddingDefault"
        android:orientation="horizontal">

        <TextView
            style="@style/textSmall"
            android:textColor="@color/color_gray"
            android:text="@string/local_lecture_memory_guide"/>

        <TextView
            android:id="@+id/txtMemory"
            style="@style/textSmall.bold"
            android:layout_marginLeft="@dimen/common_margin_small" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_size"
        android:layout_gravity="top"
        android:background="@color/line_color_black"/>

</FrameLayout>