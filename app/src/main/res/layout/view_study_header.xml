<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_margin_medium"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtTeacherName"
                style="@style/borderDefault"
                android:background="@drawable/square_basic"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txtSaleType"
                style="@style/borderDefault"
                android:layout_marginLeft="@dimen/common_margin_micro"
                android:background="@drawable/square_basic"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtLectureName"
            style="@style/textLarge.bold"
            android:layout_marginTop="@dimen/common_margin_small_s" />

        <TextView
            android:id="@+id/txtLectureDetail"
            style="@style/textMicro"
            android:layout_marginTop="@dimen/common_margin_small_s"
            android:textColor="@color/color_gray"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_header_line_size"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"/>

</FrameLayout>