<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/common_row_height_s"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/itemPaddingHeader">

        <ImageView
            android:id="@+id/imgMenu"
            android:layout_width="@dimen/common_menu_icon_size"
            android:layout_height="@dimen/common_menu_icon_size"
            android:layout_centerVertical="true"
            android:background="@drawable/down_icon_oval_primary"/>

        <TextView
            android:id="@+id/txtLectureType"
            style="@style/textMedium.bold"
            android:layout_marginLeft="@dimen/common_margin_small"
            android:layout_toRightOf="@id/imgMenu"
            android:layout_centerVertical="true"
            android:text="@string/local_lecture_menu_text"/>

        <TextView
            android:id="@+id/txtLectureCount"
            style="@style/textSmall"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_header_line_size"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"/>

</FrameLayout>