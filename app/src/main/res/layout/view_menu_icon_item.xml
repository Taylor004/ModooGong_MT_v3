<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_row_height"
    android:background="@drawable/menu_item_bg"
    android:id="@+id/layoutMenu">

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/common_line_size"-->
        <!--android:layout_gravity="bottom"-->
        <!--android:background="@color/line_color_white"/>-->

    <Space
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        style="@style/itemPaddingHeader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgMenu"
            android:layout_width="@dimen/common_icon_size"
            android:layout_height="@dimen/common_icon_size" />

        <TextView
            android:id="@+id/txtMenu"
            style="@style/textLarge"
            android:layout_marginLeft="@dimen/common_margin_small" />
    </LinearLayout>

</FrameLayout>