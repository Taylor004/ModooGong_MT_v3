<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:paddingTop="@dimen/nav_top_margin"
        android:paddingBottom="@dimen/common_margin_medium"
        android:paddingLeft="@dimen/common_margin_medium"
        android:paddingRight="@dimen/common_margin_medium"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="visible">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_gravity="start"
            android:textSize="15dp"
            android:layout_marginLeft="19dp"
            android:textColor="@color/white"
            android:text="그 동안의 학습 추이를 살펴보세요"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/subject_name_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_gravity="start"
            android:textSize="15dp"
            android:layout_marginLeft="19dp"
            android:textColor="#999999"
            android:text="주 평균"/>
        <TextView
            android:id="@+id/content_statis_subjects_history_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_gravity="start"
            android:textSize="37dp"
            android:layout_marginLeft="19dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:text="11시간 12분"/>

        <TextView
            android:id="@+id/content_statis_subjects_history_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_gravity="start"
            android:textSize="15dp"
            android:layout_marginLeft="16dp"
            android:textColor="#999999"
            android:textStyle="bold"
            android:text="2019년 10월 28일"/>

        <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/subject_history_barchart"
                    android:layout_width="match_parent"
                    android:layout_height="268dp"/>

    </LinearLayout>

</FrameLayout>