<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/itemPaddingDefault"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtTeacherName"
                style="@style/borderDefault"
                android:background="@drawable/square_basic"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txtSaleType"
                style="@style/borderDefault"
                android:layout_marginLeft="@dimen/common_margin_micro"
                android:background="@drawable/square_basic"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/lecture_item_newmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/ic_32_list_new" />

        </LinearLayout>


        <TextView
            android:id="@+id/txtLectureName"
            style="@style/textMedium"
            android:layout_marginTop="@dimen/common_margin_small_s" />

        <TextView
            android:id="@+id/txtLectureDetail"
            style="@style/textMicro"
            android:textColor="@color/color_gray"
            android:layout_marginTop="@dimen/common_margin_small_s" />

    <LinearLayout
        android:id="@+id/linearLayoutInLecture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/progLectureBar"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="10dp"
            android:layout_gravity="left|bottom"
            android:layout_marginTop="7dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_marginRight="5dp"
            android:progressTint="#00E752"
            android:progressBackgroundTint="#EEEEEE"
            android:progress="50"/>

        <TextView
            android:id="@+id/progLectureText"
            style="@style/textMicro"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_gravity="right|bottom"
            android:layout_weight="0"
            android:text=""
            android:gravity="right|bottom"
            android:textColor="@color/color_gray" />

        </LinearLayout>

    </LinearLayout>

<!--    <ImageView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginRight="@dimen/common_margin_medium"-->
<!--        android:layout_gravity="center_vertical|right"-->
<!--        android:src="@drawable/ic_right"/>-->

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_size"
        android:layout_gravity="bottom"
        android:background="@color/line_color_black"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--즐겨찾기 체크 박스-->
        <CheckBox
            android:id="@+id/checkFavoriteSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="18dp"
            android:layout_marginTop="10dp"
            android:button="@drawable/checkbox_favorite_lecture"
            android:visibility="visible" />

<!--        <ImageView-->
<!--            android:id="@+id/subscribedFavoriteMark"-->
<!--            android:layout_width="20dp"-->
<!--            android:layout_height="20dp"-->
<!--            android:layout_gravity="right"-->
<!--            android:layout_marginRight="10dp"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:visibility="gone"/>-->

    </FrameLayout>

</FrameLayout>
