<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginLeft="19dp"
        android:text="주간 수강과목 비율"
        android:textSize="15dp"
        android:textColor="@color/white"/>

    <FrameLayout
        android:id="@+id/subject_time_top_layout"
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <ImageButton
            android:id="@+id/subject_time_prev_week"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="left"
            android:background="@color/black"

            android:src="@drawable/ic_back_left"/>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/weeklyTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                style="@style/textMedium.bold"
                android:textSize="15dp"
                android:text="11월 2주"/>

            <TextView
                android:id="@+id/weeklyTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:textColor="@color/color_gray"
                android:textSize="13dp"
                android:text="2019년 11월 11일 ~ 11월 17일"/>

        </LinearLayout>


        <ImageButton
            android:id="@+id/subject_time_next_week"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:background="@color/black"
            android:src="@drawable/ic_back_right"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/subject_time_chart_layout"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/subject_time_piechart"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="240dp"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/subject_time_empty_layout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:text="수강 기록이 없습니다"
            />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/subject_time_waiting_layout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:visibility="visible">

        <com.lsjwzh.widget.materialloadingprogressbar.CircleProgressBar
            android:layout_gravity="center"
            app:mlpb_progress_color="@color/colorPrimary"
            app:mlpb_enable_circle_background="true"
            app:mlpb_progress_stoke_width="@dimen/common_progressbar_width"
            android:layout_width="@dimen/common_target_size"
            android:layout_height="@dimen/common_target_size"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:text="로딩중..."/>

    </FrameLayout>

</LinearLayout>