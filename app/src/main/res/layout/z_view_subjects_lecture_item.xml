<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/subject_ImageView"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:background="@drawable/btn_circle_white_pencil"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000">
                </de.hdodenhof.circleimageview.CircleImageView>


            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="125dp">

                <TextView
                    android:id="@+id/subjectMissionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:text="영어 목표 90강"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="125dp">

                    <TextView
                        android:id="@+id/remainedLectureSubjectTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center|bottom"
                        android:textSize="10dp"
                        android:textColor="@color/color_gray"
                        android:text="90강 중 88"/>

                </LinearLayout>



            </FrameLayout>

    </FrameLayout>


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/subject_ImageView2"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:background="@drawable/btn_circle_white_pencil"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FF000000">
                    </de.hdodenhof.circleimageview.CircleImageView>


                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="125dp">

                    <TextView
                        android:id="@+id/subjectMissionTextView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="10dp"
                        android:textColor="@color/white"
                        android:text="국어 목표 60강"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="125dp">

                        <TextView
                            android:id="@+id/remainedLectureSubjectTextView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:layout_gravity="center|bottom"
                            android:textSize="10dp"
                            android:textColor="@color/color_gray"
                            android:text="60강 중 50"/>

                    </LinearLayout>



                </FrameLayout>



            </FrameLayout>



            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/subject_ImageView3"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:background="@drawable/btn_circle_white_pencil"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FF000000">
                    </de.hdodenhof.circleimageview.CircleImageView>


                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="125dp">

                    <TextView
                        android:id="@+id/subjectMissionTextView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="10dp"
                        android:textColor="@color/white"
                        android:text="한국사 목표 30강"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="125dp">

                        <TextView
                            android:id="@+id/remainedLectureSubjectTextView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:layout_gravity="center|bottom"
                            android:textSize="10dp"
                            android:textColor="@color/color_gray"
                            android:text="30강 중 18"/>

                    </LinearLayout>



                </FrameLayout>



            </FrameLayout>


    </LinearLayout>





        </LinearLayout>

