<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/common_row_height_s"
    style="@style/itemPaddingHeader"
    android:background="?android:colorBackground"
    android:id="@+id/selectHeader">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/allSelect"
            style="@style/textSmall"
            android:text="@string/study_select_all"
            android:drawableLeft="@drawable/ic_select"
            android:drawablePadding="@dimen/common_margin_micro"/>

        <TextView
            android:id="@+id/allDeselect"
            style="@style/textSmall"
            android:text="@string/study_deselect_all"
            android:drawableLeft="@drawable/ic_select"
            android:drawablePadding="@dimen/common_margin_micro"
            android:visibility="gone"/>
    </FrameLayout>

    <TextView
        android:id="@+id/txtLectureSelectCnt"
        style="@style/textSmall"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/color_gray"/>

</RelativeLayout>