<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/common_margin_medium"
    android:paddingLeft="@dimen/common_margin_medium"
    android:paddingRight="@dimen/common_margin_medium"
    android:orientation="vertical">



    <LinearLayout
        android:id="@+id/layoutLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="visible">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">




                <FrameLayout
                    android:id="@+id/frameLaoutWeekly"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                    android:id="@+id/subjectNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:text="과목명"/>


                    <TextView
                    android:id="@+id/userNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="텍스트"
                    android:textColor="@color/color_gray"
                    android:textSize="10dp" />

                    <TextView
                    android:id="@+id/userTotalLectureTimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="40dp"
                    android:textSize="10dp"
                    android:text="11:22:34"
                    android:textColor="@color/color_gray"/>


                    <TextView
                        android:id="@+id/top5PercentNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60dp"
                        android:text="텍스트"
                        android:textColor="@color/color_gray"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/top5PercentTotalLectureTimeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60dp"
                        android:layout_marginLeft="40dp"
                        android:textAlignment="center"
                        android:textSize="10dp"
                        android:text="11:22:34"
                        android:textColor="@color/color_gray"/>


                    <TextView
                        android:id="@+id/averageTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="90dp"
                        android:text="텍스트"
                        android:textColor="@color/color_gray"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/averageTotalLectureTimeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_marginTop="90dp"
                        android:layout_marginLeft="40dp"
                        android:textSize="10dp"
                        android:text="11:22:34"
                        android:textColor="@color/color_gray"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp">

                        <ProgressBar
                            android:id="@+id/userLectureProgBar"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="10dp"
                            android:layout_marginLeft="130dp"
                            android:layout_marginTop="35dp"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_marginRight="5dp"
                            android:progressTint="@color/color_green"
                            android:progress="50"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp">

                        <ProgressBar
                            android:id="@+id/top5PercentLectureProgBar"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="10dp"
                            android:layout_marginLeft="130dp"
                            android:layout_marginTop="65dp"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_marginRight="5dp"
                            android:progressTint="@color/color_red"
                            android:progress="50"/>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp">

                        <ProgressBar
                            android:id="@+id/averageLectureProgBar"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="10dp"
                            android:layout_marginLeft="130dp"
                            android:layout_marginTop="95dp"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_marginRight="5dp"
                            android:progress="50"/>


                    </LinearLayout>



                </FrameLayout>



            </LinearLayout>





        </FrameLayout>





    </LinearLayout>






</LinearLayout>