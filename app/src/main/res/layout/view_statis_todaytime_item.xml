                app:style="solid_line"
                app:progress_stroke_width="9dp"
                app:progress_start_degree="-90"
                app:mlpb_progress_text_visibility="invisible"
                app:progress_start_color="@color/midium_progress_start_color_green"
                app:progress_end_color="@color/midium_progree_end_color_green"
