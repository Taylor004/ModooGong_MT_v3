    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp">

            <com.dinuscxj.progressbar.CircleProgressBar
                android:id="@+id/prog_1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:style="solid_line"
                app:progress_stroke_width="9dp"
                app:progress_start_degree="-90"
                app:mlpb_progress_text_visibility="invisible"
                app:progress_start_color="@color/large_progress_start_color_blue"
                app:progress_end_color="@color/large_progree_end_color_blue"
                app:progress_stroke_cap="round"
                app:progress_text_color="@color/white"
                app:progress_background_color="@color/Statis_today_leture_time_background_progress_color"/>

            <com.dinuscxj.progressbar.CircleProgressBar
