<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="kr.co.bravecompany.modoogong.android.stdapp.activity.GoDownGuideActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_margin="@dimen/guide_txt_margin"
            android:src="@drawable/ic_network_off_txt" />

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_margin"
            android:layout_gravity="bottom|center_horizontal">

            <TextView
                android:id="@+id/btnClose"
                style="@style/btnDefault"
                android:layout_width="@dimen/guide_btn_width"
                android:background="@drawable/btn_guide"
                android:textColor="@color/white"
                android:text="@string/common_close"/>

            <TextView
                android:id="@+id/btnNoMore"
                style="@style/btnDefault"
                android:layout_width="@dimen/guide_btn_width"
                android:layout_toRightOf="@id/btnClose"
                app:layout_marginLeftPercent="7%"
                android:background="@drawable/btn_guide"
                android:textColor="@color/white"
                android:text="@string/common_no_more"/>

        </androidx.percentlayout.widget.PercentRelativeLayout>

    </FrameLayout>

</FrameLayout>
