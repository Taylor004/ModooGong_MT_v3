<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/itemPaddingDefault"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtType"
                android:minWidth="@dimen/qa_type_width"
                style="@style/borderDefault"
                android:background="@drawable/border_gray"
                android:textColor="@color/color_gray" />

            <TextView
                android:id="@+id/txtDate"
                style="@style/textSmall"
                android:layout_marginLeft="@dimen/common_margin_small_s"
                android:textColor="@color/color_gray" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtTitle"
            style="@style/textMedium"
            android:layout_width="@dimen/qa_item_text_width"
            android:layout_marginTop="@dimen/common_margin_small_s"
            android:ellipsize="end"
            android:singleLine="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/common_margin_medium"
        android:layout_gravity="center_vertical|right"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txtState"
            style="@style/textSmall"
            android:textColor="@color/colorPrimary" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin_micro"
            android:src="@drawable/ic_right"/>

    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_size"
        android:layout_gravity="bottom"
        android:background="@color/line_color_black"/>

</FrameLayout>