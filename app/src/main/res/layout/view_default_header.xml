<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:colorBackground"
    android:id="@+id/defaultHeader">

    <LinearLayout
        android:id="@+id/headerDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/common_row_height_s"
        style="@style/itemPaddingHeader"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txtDefaultGuide"
            style="@style/textSmall"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/common_margin_micro"
            android:textColor="@color/color_gray"/>

        <TextView
            android:id="@+id/txtLectureCnt"
            style="@style/textSmall"
            android:textColor="@color/color_gray"/>

    </LinearLayout>

    <include layout="@layout/content_select_header"
        android:visibility="gone"/>

</FrameLayout>